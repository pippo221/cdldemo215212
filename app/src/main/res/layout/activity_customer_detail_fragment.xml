<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cuongducnguyenkp.cdldemo2.CustomerDetailFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/viewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0"
            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayoutEdit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageAVATAR"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/profilecircle2" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="Name = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="Address = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewEditAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewEditName"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="Tel. = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewTEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Telephone Number"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="Company = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewSTATUS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="Company Name"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="Service Type = "

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewEditServiceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_toRightOf="@+id/textView6"
                    android:text="Service Type"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_toRightOf="@+id/imageAVATAR"
                    android:paddingLeft="5dp"
                    android:text="MAC = "

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewMACAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_toRightOf="@+id/textView8"
                    android:text="MAC Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/background_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/viewsContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/viewsContainer"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayoutEdit2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Contract Date = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewEditContractDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView7"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:paddingLeft="5dp"
                    android:text="Status = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewEditStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_below="@+id/textViewEditContractDate"
                    android:layout_toRightOf="@+id/textView9"
                    android:text="On going/Delay/Cancel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:paddingLeft="5dp"
                    android:text="Expired in = "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/textViewExpiredDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_toRightOf="@+id/textView10"
                    android:text="Company Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/background_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>


        <ListView
            android:id="@+id/listViewDuration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewsContainer2">

        </ListView>


        <Button
            android:id="@+id/button"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Hide"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="10dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
